{% extends 'base.html.twig' %}

{% block title %}{{ 'Регистрация'|trans }}{% endblock %}

{% block body %}
<div class="site-section bg-light">
    <div class="container">
        <h1 class="text-center h2 mb-5">{{ 'Регистрация нового пользователя'|trans }}</h1>

        {{ form_start(registrationForm) }}
            <div class="row justify-content-center">
                {{ form_row(registrationForm.full_name, {
                    label: 'Полное имя'|trans,
                    attr: {class: 'form-control'}
                }) }}
            </div>
            <div class="row justify-content-center">
                {{ form_row(registrationForm.email, {
                    attr: {class: 'form-control'}
                }) }}
            </div>
            <div class="row justify-content-center">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Пароль'|trans,
                    attr: {class: 'form-control'}
                }) }}
            </div>
            <div class="row justify-content-center">
                <div class="mb-3 col-md-7">
                    {{ form_row(registrationForm.profile_image, {
                        label: 'Загрузите или перетяните файл'|trans
                    }) }}
                </div>
            </div>
            <div class="row justify-content-center">
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'С условиями согласен'|trans
                }) }}
            </div>
            <div class="row justify-content-center">
                <div class="mb-3 col-md-7 text-center">
                    <button type="submit" class="btn btn-primary">{{ 'Зарегистрироваться'|trans }}</button>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
